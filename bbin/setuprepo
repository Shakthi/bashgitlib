#!/bin/bash
set -x
selfdir=$(dirname $0)
cd $selfdir/../
mkdir packages/
git config core.worktree ../../
mv .git packages/gitdb
./bbin/resetroot
./bbin/bgit update-index --assume-unchanged ./config/gitdir
./bbin/bgit update-index --assume-unchanged ./README
cat ./README >packages/gitdb/description
rm ./README

echo packages/gitdb >>packages/gitdb/info/exclude
echo .DS_Store >>packages/gitdb/info/exclude

./bbin/bgit repack
./bbin/bgit status
./bbin/initbashrc

